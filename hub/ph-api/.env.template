# ph-api Environment Variables Template
# Copy this file to .env.dev, .env.prod, etc. and fill in the values
# DO NOT commit files with actual secrets to the repository

# =============================================
# Database Configuration
# =============================================
HUB_API_SQL_HOST=127.0.0.1
HUB_API_SQL_PORT=30110
HUB_API_SQL_USER="main"
HUB_API_SQL_PASSWORD="<database-password>"
HUB_API_SQL_DATABASE="hub-api"

# =============================================
# Redis Configuration
# =============================================
HUB_API_REDIS_HOST=127.0.0.1
HUB_API_REDIS_PORT=31096
HUB_API_REDIS_PASSWORD="<redis-password>"
HUB_API_REDIS_DB=0

# =============================================
# Kafka Configuration
# =============================================
HUB_API_KAFKA_HOST=127.0.0.1
HUB_API_KAFKA_PORT=9218

# =============================================
# Authentication
# =============================================
# Secret key for JWT token generation - KEEP THIS SECRET!
HUB_API_AUTH_SECRET_KEY="<your-auth-secret-key>"
HUB_API_AUTH_ALGORITHM="HS256"
HUB_API_AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=129600

# =============================================
# Cloudflare API Configuration
# =============================================
HUB_API_CLOUDFLARE_ACCOUNT_ID="<cloudflare-account-id>"
HUB_API_CLOUDFLARE_API_TOKEN="<cloudflare-api-token>"
HUB_API_CLOUDFLARE_IMAGE_UPLOAD_URL="<cloudflare-image-upload-url>"

# =============================================
# Twilio Configuration
# =============================================
HUB_API_TWILIO_CLIENT_ID="<twilio-client-id>"
HUB_API_TWILIO_CLIENT_KEY="<twilio-client-key>"
HUB_API_TWILIO_VERIFY="<twilio-verify-token>"

# =============================================
# Google Services
# =============================================
# Google Maps
HUB_API_GOOGLE_MAPS_API_KEY="<google-maps-api-key>"

# Google OAuth
HUB_API_GOOGLE_CLIENT_ID="<google-client-id>"
HUB_API_GOOGLE_CLIENT_SECRET="<google-client-secret>"
HUB_API_GOOGLE_PUBSUB_TOPIC="<google-pubsub-topic>"

# =============================================
# Apple Push Notifications
# =============================================
HUB_API_APNS_KEY_ID="<apns-key-id>"
HUB_API_APNS_TEAM_ID="<apns-team-id>"
HUB_API_APNS_BUNDLE_ID="<apns-bundle-id>"
HUB_API_IS_PRODUCTION=false

# =============================================
# Anthropic API Configuration
# =============================================
HUB_API_ANTHROPIC_API_KEY="<anthropic-api-key>"

# =============================================
# Storage Configuration
# =============================================
# Set to "true" to use S3 storage, "false" for local filesystem
HUB_API_USE_S3_STORAGE="false"

# S3 credentials (shared across regions)
HUB_API_S3_ACCESS_KEY="<s3-access-key>"
HUB_API_S3_SECRET_KEY="<s3-secret-key>"

# US data center configuration
HUB_API_S3_BUCKET_US="ph-api-us"
HUB_API_S3_ENDPOINT_US="https://s3.us-east-1.amazonaws.com"

# India data center configuration
HUB_API_S3_BUCKET_INDIA="ph-api-india"
HUB_API_S3_ENDPOINT_INDIA="https://s3.ap-south-1.amazonaws.com"

# =============================================
# Task Scheduler Configuration
# =============================================
# Set to "true" to enable the integrated task scheduler
ENABLE_INTEGRATED_TASKS="false"

# =============================================
# Logging Configuration
# =============================================
# Set the logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"
